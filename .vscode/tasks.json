{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build MyCV.API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/MyCV.API/MyCV.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch MyCV.API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/MyCV.API/MyCV.API.csproj",
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}